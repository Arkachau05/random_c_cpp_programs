{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (Linux)",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
                "-Wall",
                "-Werror",
                "-Wextra",
                "-pedantic",
                "-lm"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build (Windows)",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
                "-Wall",
                "-Werror",
                "-Wextra",
                "-pedantic",
                "-lm"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
